{{#if courses.length}}
  <div class="input-field" style="margin-top: 3rem;">
    <input placeholder="Поиск" id="search" type="text" class="validate" />
    <label for="first_name">Что поискать?</label>
  </div>
  {{#each courses}}
    <div class="row">
      <div class="col s6 offset-s3 cards">
        <div class="card">
          <div class="card-image">
            <img src="{{img}}" alt="{{title}}" />
          </div>
          <div class="card-content">
            <span class="card-title">{{title}}</span>
            <p class="price">{{price}}</p>
          </div>
          <div class="card-action actions">
            <a href="/courses/{{id}}" target="_self">Открыть курс</a>
            {{#if @root.isAuth}}
              <a href="/courses/{{id}}/edit?allow=true">Редактировать</a>
              <form action="/card/add" method="POST">
                <input type="hidden" name="_csrf" value="{{@root.csrf}}" />
                <input type="hidden" name="id" value="{{id}}" />
                <button type="submit" class="btn btn-primary">Купить</button>
              </form>
            {{/if}}
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <p>Курсов пока нет</p>
{{/if}}